{
  "settingsSync.ignoredSettings": [
    "editor.fontFamily",
    "editor.fontWeight"
  ],

  // Editor
  "editor.fontSize": 16,
  "editor.lineHeight": 1.8,
  "editor.fontWeight": "normal",
  "editor.lineNumbers": "relative",
  "editor.fontFamily": "dank mono, monaco, monospace",
  "editor.formatOnSave": true,
  "editor.formatOnPaste": false,
  "editor.cursorSmoothCaretAnimation": "off",
  "editor.accessibilitySupport": "off",
  "editor.inlineSuggest.enabled": true, // https://www.youtube.com/watch?v=B89NXOqif-E
  "editor.codeActionsOnSave": {
      "source.fixAll.eslint": true
  },
  "editor.tabCompletion": "onlySnippets",
  "editor.wordWrap": "off",
  "editor.suggestSelection": "first",
  "editor.fontLigatures": true,
  "editor.snippetSuggestions": "bottom",
  "editor.wordSeparators": "`~!@$%^&*()=+[{]}\\|;:'\",<>\/.?", // https://stackoverflow.com/questions/52957333/how-to-show-breadcrumbs-on-visual-studio-code
  "debug.console.fontFamily": "dank mono, monaco, monospace",
  "workbench.iconTheme": "bearded-icons",
  // https://code.visualstudio.com/api/references/theme-color
  // https://code.visualstudio.com/docs/getstarted/themes
  "workbench.colorCustomizations": {
    "[Low Eye Strain Light]": {
      "gitDecoration.ignoredResourceForeground": "#b9a50e8e"
    }
  },
  "workbench.colorTheme": "Low Eye Strain Light",

  // Debugging
  "debug.javascript.terminalOptions": {
    "skipFiles": [
      "<node_internals>/**"
    ]
  },

  // Multi Commands
  "multiCommand.commands": [   
      {
        "command": "multiCommand.saveAndCloseEditor",
        "sequence": [
          "workbench.action.files.save",
          "workbench.action.closeActiveEditor",
        ]
      },
  ],

  // Terminal
  "terminal.integrated.fontFamily": "monaco, monospace",

  // Git
  "git.autofetch": true,
  "git.confirmSync": false,
  "git.enableSmartCommit": true,

  // Eslint + Prettier
  "eslint.enable": true,
  "eslint.alwaysShowStatus": true,
  "eslint.options": {
    "extensions": [".js", ".jsx", ".ts", ".tsx"]
  },
  "prettier.bracketSpacing": false,
  "prettier.requireConfig": true,

  // Javascript
  "javascript.preferences.importModuleSpecifier": "relative",
  "javascript.updateImportsOnFileMove.enabled": "always",
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  // Typescript
  "typescript.preferences.importModuleSpecifier": "relative",
  "typescript.updateImportsOnFileMove.enabled": "always",
  // https://stackoverflow.com/questions/55537574/format-tsx-files-on-save-in-vs-code
  "typescript.format.enable": false,
  "typescript.enablePromptUseWorkspaceTsdk": true,
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.codeActionsOnSave": {
      "source.organizeImports": true
    }
  },
  "[typescriptreact]": {
    "editor.codeActionsOnSave": {
      "source.organizeImports": true
    }
  },


  // Json
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "redhat.telemetry.enabled": false,

  // Markdown
  "[markdown]": {
    "editor.formatOnSave": false, // Disabled as it does more harm than good
    "files.trimTrailingWhitespace": false,
  },
  "todohighlight.isEnable": true,
  "workbench.sideBar.location": "right",
  "terminal.integrated.env.windows": {}

  // Newly added (Settigs that were added from the UI and need to be categorizes)
}